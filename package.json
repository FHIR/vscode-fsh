{
  "name": "vscode-fsh",
  "displayName": "HL7 FHIR Shorthand",
  "description": "FHIR Shorthand (FSH) Language Support by HL7",
  "version": "1.19.0",
  "author": "Health Level Seven International",
  "license": "Apache-2.0",
  "publisher": "FHIR-Shorthand",
  "icon": "images/docs/fsh-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/standardhealth/vscode-language-fsh"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "activationEvents": [
    "onLanguage:fsh",
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "fsh",
        "aliases": [
          "FSH",
          "fsh"
        ],
        "extensions": [
          ".fsh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fsh",
        "scopeName": "source.fsh",
        "path": "./syntaxes/fsh.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "fsh",
        "path": "./snippets/fsh-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "extension.openFhir",
        "title": "Open FHIR Documentation"
      },
      {
        "command": "extension.fshToFhir",
        "title": "FSH to FHIR JSON",
        "category": "vscode-fsh"
      },
      {
        "command": "extension.fhirToFsh",
        "title": "FHIR to FSH",
        "category": "vscode-fsh"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.openFhir",
          "group": "navigation",
          "when": "editorLangId == fsh"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.fshToFhir",
          "group": "1_modification",
          "when": "resourceExtname == .fsh"
        },
        {
          "command": "extension.fhirToFsh",
          "group": "1_modification",
          "when": "resourceExtname == .json || resourceExtname == .xml"
        }
      ]
    },
    "problemMatchers": [
      {
        "owner": "vscode-fsh",
        "name": "sushi",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^(warn|error) (.+)$",
            "severity": 1,
            "message": 2
          },
          {
            "regexp": "^  File: (.+)$",
            "file": 1
          },
          {
            "regexp": "^  Line: (\\d+)( - (\\d+))?$",
            "line": 1
          }
        ]
      }
    ],
    "taskDefinitions": [
      {
        "type": "fsh",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "FSH Task"
          }
        }
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "build:watch": "tsc -watch -p ./",
    "lint": "tsc && eslint \"**/*.{js,ts}\"",
    "lint:fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --check \"**/*.{js,ts}\"",
    "prettier:fix": "prettier --write \"**/*.{js,ts}\"",
    "pretest": "npm run build",
    "test": "node ./out/test/runTest.js",
    "check": "npm run lint && npm run prettier && npm run test",
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@types/antlr4": "^4.11.6",
    "@types/chai": "^4.3.20",
    "@types/chai-spies": "^1.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.16.5",
    "@types/semver": "^7.7.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^4.5.0",
    "chai-spies": "^1.1.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "nock": "^13.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "antlr4": "~4.13.2",
    "axios": "^1.7.7",
    "fsh-sushi": "^3.16.3",
    "gofsh": "^2.5.1",
    "semver": "^7.7.2",
    "yaml": "^2.8.0"
  }
}
