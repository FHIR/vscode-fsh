{
    "name": "vscode-language-fsh",
    "displayName": "vscode-language-fsh",
    "description": "VSCode FHIR Shorthand (FSH) Language Support",
    "version": "1.6.0",
    "author": "The MITRE Corporation",
    "license": "Apache-2.0",
    "publisher": "kmahalingam",
    "icon": "images/docs/fsh-icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/standardhealth/vscode-language-fsh"
    },
    "engines": {
        "vscode": "^1.39.0"
    },
    "activationEvents": [
        "onLanguage:fsh"
    ],
    "main": "./out/extension",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fsh",
                "aliases": [
                    "FSH",
                    "fsh"
                ],
                "extensions": [
                    ".fsh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fsh",
                "scopeName": "source.fsh",
                "path": "./syntaxes/fsh.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "fsh",
                "path": "./snippets/fsh-snippets.json"
            }
        ],
        "commands": [
            {
                "command": "extension.openFhir",
                "title": "Open FHIR Documentation"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.openFhir",
                    "group": "navigation",
                    "when": "editorLangId == fsh"
                }
            ]
        },
        "configuration": {
            "title": "FHIR Shorthand",
            "properties": {
                "fsh.fhirCachePath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specifies the absolute path to the FHIR cache. This is typically a directory named `.fhir`."
                }
            }
        }
    },
    "scripts": {
        "build": "tsc -p ./",
        "build:watch": "tsc -watch -p ./",
        "lint": "tsc && eslint \"**/*.{js,ts}\"",
        "lint:fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "prettier": "prettier --check \"**/*.{js,ts}\"",
        "prettier:fix": "prettier --write \"**/*.{js,ts}\"",
        "pretest": "npm run build",
        "test": "node ./out/test/runTest.js",
        "check": "npm run lint && npm run prettier && npm run test",
        "vscode:prepublish": "tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/antlr4": "^4.7.2",
        "@types/chai": "^4.2.16",
        "@types/chai-spies": "^1.0.3",
        "@types/fs-extra": "^9.0.11",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.1",
        "@types/node": "^14.14.25",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "chai": "^4.3.4",
        "chai-spies": "^1.0.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6",
        "mocha": "^8.3.1",
        "nock": "^13.0.11",
        "prettier": "^2.2.1",
        "typescript": "^4.2.2",
        "vscode": "^1.1.37",
        "vscode-test": "^1.5.1"
    },
    "dependencies": {
        "antlr4": "~4.8.0",
        "axios": "^0.21.1",
        "yaml": "^1.10.2"
    }
}
